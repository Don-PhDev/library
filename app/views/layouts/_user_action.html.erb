<div class="user-actions">
  <% if user_signed_in? %>
    <%= link_to "Log out", destroy_user_session_path,
      method: :delete,
      style: "float: right"
    %><hr />
  <% else %>
    <div class="authenticate">
      <%= link_to "Sign up", new_user_registration_path %> |
      <%= link_to "Log in", new_user_session_path %><hr />
    </div>
  <% end %>
</div>
